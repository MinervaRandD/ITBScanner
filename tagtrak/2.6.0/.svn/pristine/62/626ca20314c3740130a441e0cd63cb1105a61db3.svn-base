[COPY]
$FLASH$\*.*=$AVA$\*.*
$FLASH$\Windows\*.*=$AVA$\Windows\*.*

[SHORTCUT]
"$Startup$\AvaMon.lnk"="$FLASH$\AvaInit.exe"
